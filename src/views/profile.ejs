<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>

    <title>Profile</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css"/>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>

    <link rel="stylesheet" href="/css/menu.css"/>
    <script src="/js/menu.js"></script>

    <style type="text/css">

      
      
      
    </style>

    <script>
      $(document).ready(function () {

        if(localStorage.getItem("stathlete") != null){
          let athlete = JSON.parse(localStorage.getItem("stathlete"));
        
          let p ='<div class="ui card" style="width: auto !important;">'+
          '<div class="image">'+
            '<img src="'+athlete.profile+'" onerror="this.onerror=null; this.src="/fatchImage.png">'+
          '</div>'+
          '<div class="content">'+
            '<a class="header">'+athlete.firstname +' '+ athlete.lastname+'</a>'+
            '<div class="meta"><span class="date">SEX : '+athlete.sex+'</span></div>'+
            '<div class="description">City : '+athlete.city +', state : '+ athlete.state +', country : '+ athlete.country+'</div>'+
          '</div>'+
          '<div class="extra content">'+
            '<span class="right floated">Joined in '+athlete.created_at+'</span>'+
            '<span><i class="user icon"></i>Friends '+athlete.friend_count+'</span>'+
          '</div>'+
          '</div>';

          $('.pusher').append(p);

        }
        

      });
    </script>
  </head>
  <body class="pushable">

    <%- include('user_header', {selected: 'profile', title:'PROFILE'}); %>

    <div class="pusher">

      <div class="ui ignored info message" style="margin: 10px;">
        <i class="info icon"></i>
        <div class="header">About Profile</div>
        We are fetching profile data from strava app.. 
      </div>
      
    </div>
  
  </body>
</html>
